<div class="flex flex-col gap-3 w-full text-center mt-4">
  <%- if controller_name != 'sessions' %>
    <div class="text-sm text-base-content/60">
      Déjà un compte ? 
      <%= link_to "Se connecter", new_session_path(resource_name), class: "link link-primary font-semibold no-underline hover:underline" %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="text-sm text-base-content/60">
      Nouveau ici ? 
      <%= link_to "Créer un compte", new_registration_path(resource_name), class: "link link-primary font-semibold no-underline hover:underline" %>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "text-xs text-base-content/40 hover:text-primary transition-colors" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Pas reçu les instructions de confirmation ?", new_confirmation_path(resource_name), class: "text-xs opacity-70" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
    <% end %>
  <% end %>
</div>