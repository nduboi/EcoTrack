<div class="min-h-[80vh] flex items-center justify-center py-10">
  <div class="card w-full max-w-md bg-base-100 shadow-xl border border-base-200">
    <div class="card-body">
      
      <%# Titre %>
      <div class="flex flex-col items-center gap-2 mb-6">
        <h2 class="card-title text-2xl font-bold text-primary">Créer un compte</h2>
        <p class="text-sm text-base-content/60">Rejoignez Eco Track aujourd'hui</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
        
        <%# Affichage des erreurs de Devise stylisé %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%# Champ Nom %>
        <div class="form-control">
          <label class="label">
            <span class="label-text font-semibold text-base-content/70">Nom complet</span>
          </label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-base-content/40">
              <%= lucide_icon("user", class: "size-5") %>
            </div>
            <%= f.text_field :name, autofocus: true, placeholder: "Nom complet",
                class: "input input-bordered w-full pl-2 focus:input-primary" %>
          </div>
        </div>

        <%# Champ Email %>
        <div class="form-control">
          <label class="label">
            <span class="label-text font-semibold text-base-content/70">Email</span>
          </label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-base-content/40">
              <%= lucide_icon("mail", class: "size-5") %>
            </div>
            <%= f.email_field :email, autocomplete: "email", placeholder: "Adresse email",
                class: "input input-bordered w-full pl-2 focus:input-primary" %>
          </div>
        </div>

        <%# Champ Mot de passe %>
        <div class="form-control">
          <label class="label">
            <span class="label-text font-semibold text-base-content/70">Mot de passe</span>
            <% if @minimum_password_length %>
              <span class="label-text-alt opacity-50">(<%= @minimum_password_length %> caract. min)</span>
            <% end %>
          </label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-base-content/40">
              <%= lucide_icon("lock", class: "size-5") %>
            </div>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "••••••••",
                class: "input input-bordered w-full pl-2 focus:input-primary" %>
          </div>
        </div>

        <%# Confirmation Mot de passe %>
        <div class="form-control">
          <label class="label">
            <span class="label-text font-semibold text-base-content/70">Confirmer le mot de passe</span>
          </label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-base-content/40">
              <%= lucide_icon("check-check", class: "size-5") %>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "••••••••",
                class: "input input-bordered w-full pl-2 focus:input-primary" %>
          </div>
        </div>

        <div class="form-control mt-6">
          <%= f.submit "S'inscrire", class: "btn btn-primary w-full text-white font-bold" %>
        </div>
      <% end %>

      <div class="divider text-xs text-base-content/40 uppercase font-medium">Ou s'inscrire avec</div>
      
      <div class="flex flex-col gap-3">
        <%= render(SocialButtonComponent.new(provider: "github", path: user_github_omniauth_authorize_path)) %>
        <%= render(SocialButtonComponent.new(provider: "google", path: user_google_oauth2_omniauth_authorize_path)) %>
      </div>

      <div class="mt-6 text-center">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>