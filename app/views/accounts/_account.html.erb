<div id="<%= dom_id account %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= account.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Account type:</strong>
    <%= account.account_type %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Balance:</strong>
    <%= account.balance %>
  </div>
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= account.user_id %>
  </div>
</div>
