<%= form_with(model: revenue, class: "space-y-5") do |f| %>
  <div class="form-control">
    <%= f.label :name, "Source du revenu", class: "label font-semibold" %>
    <%= f.text_field :name, placeholder: "Ex: Salaire Décembre, Vente Vinted...", 
        class: "input input-bordered w-full focus:input-success" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="form-control">
      <%= f.label :amount, "Montant", class: "label font-semibold" %>
      <div class="relative">
        <span class="absolute inset-y-0 left-3 flex items-center text-success font-bold">€</span>
        <%= f.number_field :amount, step: :any, class: "input input-bordered w-full pl-2 focus:input-success" %>
      </div>
    </div>

    <div class="form-control">
      <%= f.label :date, "Date de réception", class: "label font-semibold" %>
      <%= f.date_field :date, value: Date.today, class: "input input-bordered w-full focus:input-success" %>
    </div>
  </div>

  <div class="form-control">
    <%= f.label :category_id, "Catégorie (Optionnel)", class: "label font-semibold" %>
    <%= f.collection_select :category_id, current_user.categories.all, :id, :nom, 
        { include_blank: "Choisir une catégorie" }, 
        { class: "select select-bordered w-full focus:select-success" } %>
  </div>

  <div class="card-actions justify-end mt-6 pt-4 border-t border-base-200">
    <%= link_to "Annuler", revenues_path, class: "btn btn-ghost" %>
    <%= f.submit "Enregistrer", class: "btn btn-success text-white px-8" %>
  </div>
<% end %>