<% content_for :title, "Nouvelle dépense" %>

<div class="max-w-2xl mx-auto">
  <%# Fil d'ariane / Retour %>
  <div class="text-sm breadcrumbs mb-6">
    <ul>
      <li><%= link_to "Dépenses", expenses_path, class: "text-primary" %></li>
      <li>Nouvelle dépense</li>
    </ul>
  </div>

  <div class="card bg-base-100 shadow-xl border border-base-200">
    <div class="card-body">
      <div class="flex items-center gap-3 mb-6">
        <div class="p-3 bg-primary/10 text-primary rounded-lg">
          <%= lucide_icon("receipt-text", class: "size-6") %>
        </div>
        <div>
          <h2 class="card-title text-2xl font-bold">Ajouter une dépense</h2>
          <p class="text-sm text-base-content/60">Renseignez les détails de votre transaction</p>
        </div>
      </div>

      <%= render "form", expense: @expense %>
    </div>
  </div>
</div>